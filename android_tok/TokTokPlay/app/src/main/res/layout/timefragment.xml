<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <TextView
        android:id="@+id/timeFragmentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title_list"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="15 : 53"
        android:textColor="#c7ffffff"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/timeFragmentTimeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeFragmentTime"
        android:layout_toEndOf="@+id/timeFragmentTime"
        android:text="오후"
        android:textColor="#c7ffffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/timeFragmenDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeFragmentTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="2017년 5월 10일"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/title_list"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:src="@drawable/startactivity_background_top" />

    <ImageView
        android:id="@+id/title_list2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/title_list"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:src="@drawable/startactivity_background_title" />
</RelativeLayout>