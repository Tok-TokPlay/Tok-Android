<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.dkdk6.toktokplay.Activity.StartingActivity">

    <ImageView
        android:id="@+id/title_starting"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="fitStart"
        android:src="@drawable/startactivity_background_title" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title_starting"
        android:background="#474444"></View>

    <RelativeLayout
        android:id="@+id/first_layout2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view">

        <ImageView
            android:id="@+id/imageView2_title"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/startactivity_background_topmain"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#474444"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/first_layout2">

        <ImageButton
            android:id="@+id/onBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/selector"
            android:scaleType="fitStart"
            android:src="@drawable/startactivity_background_onbutton"
            android:layout_alignTop="@+id/view4"
            android:layout_toStartOf="@+id/view4"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <View
            android:id="@+id/view4"
            android:layout_width="1dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="#474444"></View>

        <ImageButton
            android:id="@+id/offBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/selector"
            android:scaleType="fitStart"
            android:src="@drawable/startactivity_background_offbutton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/view4"
            android:layout_toEndOf="@+id/view4" />

        <ImageView
            android:id="@+id/onBtn_sub"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/onBtn"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/view4"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/startactivity_background_onbutton_sub2" />

        <ImageView
            android:id="@+id/offBtn_sub"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/offBtn"
            android:layout_toEndOf="@+id/view4"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/startactivity_background_offbutton_sub2" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#474444"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LastLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/secondLayout">

        <ImageView
            android:id="@+id/last1"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/startingactivity_searching_sub2"
            android:layout_alignEnd="@+id/view6" />

        <ImageButton
            android:id="@+id/searching_direct"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_toStartOf="@+id/view6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector"
            android:scaleType="fitStart"
            android:src="@drawable/startingactivity_searching_icon"
            android:layout_below="@+id/last1"
            android:layout_alignEnd="@+id/view6"/>

        <View
            android:id="@+id/view6"
            android:layout_width="1dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#474444"></View>

        <ImageView
            android:id="@+id/last2"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/startingactivity_playing_sub2"
            android:layout_marginLeft="50dp"
            android:layout_alignTop="@+id/last1"
            android:layout_toEndOf="@+id/last1" />

        <ImageButton
            android:id="@+id/playMusic_direct"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/selector"
            android:layout_toEndOf="@+id/view6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/last2"
            android:scaleType="fitStart"
            android:src="@drawable/startingactivity_playing_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/view6"/>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#474444"></View>

    </RelativeLayout>


</RelativeLayout>
