<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"/>
    <TextView
        android:id="@+id/timeFragmentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:text="15 : 53"
        android:textColor="#c7ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/timeFragmenDate"
        android:layout_marginTop="18dp" />
    <TextView
        android:id="@+id/timeFragmentTimeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="오후"
        android:textColor="#c7ffffff"
        android:layout_alignBottom="@+id/timeFragmentTime"
        android:layout_toEndOf="@+id/timeFragmentTime" />
    <TextView
        android:id="@+id/timeFragmenDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="2017년 5월 10일"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/timeFragmentTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />
    <ImageView
    android:id="@+id/title_list"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@android:color/transparent"
    android:scaleType="fitStart"
    android:src="@drawable/startactivity_background_top"
    android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/title_list2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:layout_below="@+id/title_list"
        android:src="@drawable/startactivity_background_title"
        android:layout_centerInParent="true" />
</RelativeLayout>