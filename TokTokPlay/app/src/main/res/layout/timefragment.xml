<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <TextView
        android:id="@+id/timeFragmentTime"
        android:layout_marginTop="101dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:text="15 : 53"
        android:textColor="#c7000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/timeFragmentTimeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="오후"
        android:textColor="#C7000000"
        android:layout_alignBottom="@+id/timeFragmentTime"
        android:layout_toEndOf="@+id/timeFragmentTime" />
    <TextView
        android:id="@+id/timeFragmenDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="2017년 5월 10일"
        android:textColor="#000000"
        android:layout_below="@+id/timeFragmentTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>